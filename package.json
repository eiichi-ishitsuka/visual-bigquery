{
    "name": "visual-bigquery",
    "publisher": "eiichi-ishitsuka",
    "repository": {
        "type": "git",
        "url": "git://github.com/eiichi-ishitsuka/visual-bigquery.git"
    },
    "icon": "asset/icon.png",
    "displayName": "Visual-BigQuery",
    "description": "Support Google BigQuery SQL",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "*"
    ],
    "keywords": [
        "BigQuery",
        "GCP",
        "bq",
        "Google Cloud",
        "SQL"
    ],
    "preview": true,
    "main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
    "contributes": {
        "languages": [
            {
                "id": "sql",
                "aliases": [
                    "BigQuery SQL",
                    "sql"
                ],
                "extensions": [
                    ".sql"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Visual-BigQuery",
            "properties": {
                "visual-bigquery.defaultTimezone": {
                    "scope": "resource",
                    "type": "string",
                    "default": "Asia/Tokyo",
                    "description": "default using Timezone"
                }
            }
        },        
        "grammars": [
            {
                "language": "sql",
                "scopeName": "source.bigquery.sql",
                "path": "./syntaxes/sql.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "@types/vscode": "^1.58.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "vsce": "^1.96.1"
    }
}
