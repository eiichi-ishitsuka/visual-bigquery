{
    "comments": {
        "lineComment": "#",
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    // on enter indent roles
    "onEnterRules": [
        {
          "beforeText": "^\\s*(?:SELECT|FROM|WHERE|GROUP BY|HAVING|ORDER BY|QUALIFY|BETWEEN|WITH|CASE|WHEN|THEN|ELSE|DISTINCT|LIMIT|INSERT|UPDATE|DELETE|MERGE)$",
          "action": { "indent": "indent" }
        }
    ]
}